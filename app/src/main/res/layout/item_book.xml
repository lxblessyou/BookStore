<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/iv_book"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="产品标题部分内容。。。"
        android:id="@+id/tv_title"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/iv_book"
        android:layout_alignTop="@+id/iv_book"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:maxLines="3"
        android:ellipsize="start" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5星"
        android:id="@+id/tv_star"
        android:layout_alignBottom="@+id/iv_book"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$100.00"
        android:textColor="@color/text_gray"
        android:textSize="12sp"
        android:id="@+id/tv_price"
        android:layout_below="@+id/tv_discount_price"
        android:layout_alignLeft="@id/tv_discount_price"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 50.00"
        android:textSize="25sp"
        android:textColor="@color/red"
        android:id="@+id/tv_discount_price"
        android:layout_alignBottom="@+id/tv_discount"
        android:layout_alignLeft="@+id/tv_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5.0折"
        android:padding="2dp"
        android:textColor="@color/white"
        android:background="@color/red"
        android:id="@+id/tv_discount"
        android:layout_marginLeft="42dp"
        android:layout_above="@+id/tv_star"
        android:layout_toRightOf="@+id/tv_discount_price"/>
</RelativeLayout>